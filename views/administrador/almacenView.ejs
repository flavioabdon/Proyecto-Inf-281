<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- sidebar -->
        <%- include('partials/sidebar') %>
            <!-- fin sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- topbar -->
                    <%- include('partials/topbar') %>
                        <!-- fin de topbar -->


                        <!-- contenido main -->
                        <main class="mx-5 my-5 contenido-principal">

                            <!-- Card Contenedor -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h4 class="m-0 font-weight-bold text-secondary text-center">Gestion de Almacenes üè¢
                                    </h4>
                                </div>
                                <div class="card-body">

                                    <!-- Bot√≥n para abrir el modal -->
                                    <button class="btn btn-success my-1 mt-4 ml-4" data-toggle="modal"
                                        data-target="#modalAgregarAlmacen">A√±adir Almac√©n</button>

                                    <div class="row contenedor-tabla">
                                        <div class="col-lg-12">
                                            <div class="table-responsive px-4 py-2">
                                                <table id="tablaAlmacen" class="table table-hover responsive nowrap"
                                                    style="width:100%">
                                                    <!--Encabezados de la tabla-->
                                                    <thead class="thead-light text-center">
                                                        <tr>
                                                            <th class="">#:&nbsp;</th>
                                                            <th>ID:&nbsp;</th>
                                                            <th class="">Nombre Almacen:&nbsp;</th>
                                                            <th class="">Direccion:&nbsp;</th>
                                                            <th class="">Capacidad:&nbsp;</th>
                                                            <th class="">Estado:&nbsp;</th>
                                                            <th class="">Acciones:&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- Contenido de la tabla obtenido dinamicamente del crudAlmacen-->
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- modalAgregarAlmacen: para A√±adir Almacen -->
                            <div class="modal fade" id="modalAgregarAlmacen" tabindex="-1" role="dialog"
                                aria-labelledby="modalAgregarAlmacenLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">

                                    <!--Aqu√≠ comienza el contenido real del modal, que contiene el encabezado, el cuerpo y el pie-->
                                    <div class="modal-content p-2">

                                        <div class="modal-header"><!--Encabezado del Modal-->
                                            <h5 class="modal-title" id="modalAgregarAlmacenLabel">A√±adir Almac√©n</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                                <!--Usa el s√≠mbolo &times; (que es una "X") como √≠cono para cerrar. -->
                                            </button>
                                        </div>

                                        <div class="modal-body"><!--Cuerpo del Modal-->
                                            <form id="formRegistrarAlmacen" method="POST" action="">
                                                <!--El formulario tiene el id="formRegistrarAlmacen", lo que permite referenciarlo y manipularlo a trav√©s de JavaScript.-->
                                                <div class="form-group">
                                                    <label for="nombreAlmacen">Nombre del Almac√©n:</label>
                                                    <input type="text" class="form-control" id="nombreAlmacen"
                                                        placeholder="Introduce el nombre del almac√©n"
                                                        name="nombreAlmacen" required> <!--name="nombreAlmacen": Este atributo define el nombre del campo cuando el formulario se env√≠a.-->
                                                </div>
                                                <div class="form-group">
                                                    <label for="capacidadAlmacen">Capacidad (unidades):</label>
                                                    <input type="number" class="form-control" id="capacidadAlmacen"
                                                        placeholder="Introduce la capacidad del almac√©n"
                                                        name="capacidadAlmacen" min="1" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="direccionAlmacen">Direcci√≥n:</label>
                                                    <textarea class="form-control" id="direccionAlmacen" rows="3"
                                                        placeholder="Introduce una direcci√≥n" name="direccionAlmacen"
                                                        required></textarea>
                                                </div>

                                                <!-- Bloque a√±adido para ubicaci√≥n -->
                                                <div class="form-group">
                                                    <label for="ubicacionAlmacen" class="labels">Ubicaci√≥n</label>
                                                    <div class="input-group">
                                                        <button type="button" class="btn btn-outline-primary"
                                                            id="abrirMapa">
                                                            <i class="fa fa-map"></i> Abrir Google Maps
                                                        </button>
                                                    </div>
                                                </div>
                                                <!-- Fin del bloque a√±adido -->

                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cerrar</button>
                                            <button type="submit" form="formRegistrarAlmacen"
                                                class="btn btn-success">Guardar Almac√©n</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Segundo Modal con Google Maps -->
                            <div class="modal fade" id="segundoModal" tabindex="-1" role="dialog"
                                aria-labelledby="segundoModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="segundoModalLabel">Ubicaci√≥n en Google Maps</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <!-- Reemplaza la URL del mapa con la ubicaci√≥n deseada -->
                                            <iframe
                                                src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d108149.74007316536!2d-68.17363229776905!3d-16.500849290268757!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2sbo!4v1729041934336!5m2!1ses!2sbo"
                                                width="100%" height="450" style="border:0;" allowfullscreen=""
                                                loading="lazy">
                                            </iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <!-- Modal para Actualizar Almacen -->
                            <div class="modal fade" id="modalActualizarAlmacen" tabindex="-1" role="dialog"
                                aria-labelledby="modalActualizarAlmacenLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content p-2">

                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalActualizarAlmacenLabel">Actualizar Almac√©n
                                            </h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        
                                        <div class="modal-body">
                                            <form id="formActualizarAlmacen" action="">
                                                <!-- Campo oculto para el ID del almac√©n -->
                                                <input type="hidden" id="idAlmacenActualizar"
                                                    name="idAlmacenActualizar">

                                                <!-- Nombre del almac√©n -->
                                                <div class="form-group">
                                                    <label for="nombreAlmacenActualizar">Nombre del Almac√©n:</label>
                                                    <input type="text" class="form-control" id="nombreAlmacenActualizar"
                                                        placeholder="Introduce el nombre del almac√©n"
                                                        name="nombreAlmacenActualizar" required>
                                                </div>
                                                <!-- Capacidad del almac√©n -->
                                                <div class="form-group mb-0">
                                                    <label for="capacidadAlmacenActualizar">Capacidad
                                                        (unidades):</label>
                                                    <input type="number" class="form-control"
                                                        id="capacidadAlmacenActualizar"
                                                        placeholder="Introduce la capacidad del almac√©n"
                                                        name="capacidadAlmacenActualizar" min="1" required>
                                                </div>
                                                <!-- Direcci√≥n del almac√©n -->
                                                <div class="form-group">
                                                    <label for="direccionAlmacenActualizar">Direcci√≥n:</label>
                                                    <textarea class="form-control" id="direccionAlmacenActualizar"
                                                        rows="3" placeholder="Introduce la direcci√≥n"
                                                        name="direccionAlmacenActualizar" required></textarea>
                                                </div>


                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cerrar</button>
                                            <button type="submit" form="formActualizarAlmacen"
                                                class="btn btn-primary">Actualizar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>




                        </main>
