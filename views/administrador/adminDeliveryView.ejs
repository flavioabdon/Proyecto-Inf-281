<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Administrar Delivery</title>

    <!-- datatables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.3/css/responsive.bootstrap5.css">



    <!-- Custom fonts for this template-->
    <link href="/dashboard/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- iconos -->
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />


    <!-- Custom styles for this template-->
    <link href="/dashboard/css/sb-admin-2.min.css" rel="stylesheet">


    <!-- miCss -->


</head>


<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- sidebar -->
        <%- include('partials/sidebar') %>
            <!-- fin sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- topbar -->
                    <%- include('partials/topbar') %>
                        <!-- fin de topbar -->


                        <!-- contenido main -->
                        <main class="mx-5 my-5 contenido-principal">

                            <!-- Card Contenedor -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h4 class="m-0 font-weight-bold text-secondary text-center">Gestión de Deliveries
                                    </h4>
                                </div>
                                <div class="card-body">
                                    <!-- Botón para abrir el modal -->
                                    <button class="btn btn-success my-1 mt-4 ml-4" data-toggle="modal"
                                        data-target="#modalAgregarDelivery">Añadir Delivery</button>

                                    <div class="row contenedor-tabla">
                                        <div class="col-lg-12">
                                            <div class="table-responsive table-responsive px-4 py-2">
                                                <table id="tablaDelivery" class="table table-hover responsive nowrap"
                                                    style="width:100%">
                                                    <thead class="thead-light text-center">
                                                        <tr>
                                                            <th class="">#:&nbsp;</th>
                                                            <th>ID:&nbsp;</th>
                                                            <th class="">C.I.:&nbsp;</th>
                                                            <th class="">Nombres:&nbsp;</th>
                                                            <th class="">Apellidos:&nbsp;</th>
                                                            <th class="">Email:&nbsp;</th>
                                                            <th class="">Vehiculo:&nbsp;</th>
                                                            <th class="">Placa:&nbsp;</th>
                                                            <th class="">Celular:&nbsp;</th>
                                                            <th class="">Sexo:&nbsp;</th>
                                                            <th class="">Imagen:&nbsp;</th>
                                                            <th class="">Estado:&nbsp;</th>
                                                            <th class="">Acciones:&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- Contenido de la tabla -->
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal para Añadir Delivery con estilo de perfil -->
                            <div class="modal fade" id="modalAgregarDelivery" tabindex="-1" role="dialog"
                                aria-labelledby="modalAgregarDeliveryLabel" aria-hidden="true">
                                <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
                                    <div class="modal-content rounded bg-white perfil-cliente">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalAgregarDeliveryLabel">Añadir Delivery</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div
                                                        class="d-flex flex-column align-items-center text-center py-5 imagenPerfilDelivery">
                                                        <!-- Imagen del perfil del delivery con tamaño fijo -->
                                                        <img id="imagenPerfilDelivery" class="rounded-circle"
                                                            width="150px" height="150px" style="object-fit: cover;"
                                                            src="/moduloDifusion/img/perfil.jpg">
                                                        <span class="p-2 m-2 bg-success badge">DELIVERY</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-9 px-4">
                                                    <form id="formRegistrarDelivery" method="POST" action=""
                                                        enctype="multipart/form-data">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <label for="nombreDelivery"
                                                                    class="labels">Nombres</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-user"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="nombreDelivery" name="nombreDelivery"
                                                                        placeholder="Ingresa los nombres" required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="fotoDelivery" class="labels">Imagen de
                                                                    Perfil</label>
                                                                <div class="input-group">
                                                                    <input type="file" class="form-control"
                                                                        id="fotoDelivery" name="fotoDelivery"
                                                                        accept="image/*" required>
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-upload"></i></span>
                                                                </div>
                                                                <img id="previewImagenDelivery" src=""
                                                                    alt="Vista previa"
                                                                    style="display: none; max-width: 100%; margin-top: 10px;">
                                                            </div>
                                                        </div>
                                                        <div class="row mt-2">
                                                            <div class="col-md-6">
                                                                <label for="apellidoDelivery"
                                                                    class="labels">Apellidos</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-user-tag"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="apellidoDelivery" name="apellidoDelivery"
                                                                        placeholder="Ingresa los apellidos" required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="ciDelivery" class="labels">C.I.</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-id-card"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="ciDelivery" name="ciDelivery"
                                                                        placeholder="Ingresa el C.I." required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row mt-2">
                                                            <div class="col-md-6">
                                                                <label for="emailDelivery" class="labels">Email</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-envelope"></i></span>
                                                                    <input type="email" class="form-control"
                                                                        id="emailDelivery" name="emailDelivery"
                                                                        placeholder="Ingresa el email" required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="celularDelivery" class="labels">Número de
                                                                    Contacto</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-phone"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="celularDelivery" name="celularDelivery"
                                                                        placeholder="Ingresa el número de contacto"
                                                                        required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row mt-2">
                                                            <div class="col-md-6">
                                                                <label for="tipoVehiculoDelivery" class="labels">Tipo de
                                                                    Vehículo</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-car"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="tipoVehiculoDelivery"
                                                                        name="tipoVehiculoDelivery"
                                                                        placeholder="Ingresa el tipo de vehículo"
                                                                        required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="matriculaVehiculoDelivery"
                                                                    class="labels">Matrícula del Vehículo</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-id-badge"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="matriculaVehiculoDelivery"
                                                                        name="matriculaVehiculoDelivery"
                                                                        placeholder="Ingresa la matrícula del vehículo"
                                                                        required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row mt-2">
                                                            <div class="col-md-6">
                                                                <label for="sexoDelivery" class="labels">Sexo</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-venus-mars"></i></span>
                                                                    <select class="form-select" id="sexoDelivery"
                                                                        name="sexoDelivery" required>
                                                                        <option value="" disabled selected>Selecciona tu
                                                                            sexo</option>
                                                                        <option value="M">Masculino</option>
                                                                        <option value="F">Femenino</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="ubicacionDelivery"
                                                                    class="labels">Ubicación</label>
                                                                <div class="input-group">
                                                                    <button type="button"
                                                                        class="btn btn-outline-primary" id="abrirMapa">
                                                                        <i class="fa fa-map"></i> Abrir Google Maps
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="mt-4 text-center">
                                                            <button type="submit" class="btn btn-success"
                                                                id="btnRegistrarDelivery"
                                                                name="btnRegistrarDelivery">Guardar Delivery</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cerrar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <!-- Segundo Modal con Google Maps -->
                            <div class="modal fade" id="segundoModal" tabindex="-1" role="dialog"
                                aria-labelledby="segundoModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="segundoModalLabel">Ubicación en Google Maps</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <!-- Reemplaza la URL del mapa con la ubicación deseada -->
                                            <iframe
                                                src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d108149.74007316536!2d-68.17363229776905!3d-16.500849290268757!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2sbo!4v1729041934336!5m2!1ses!2sbo"
                                                width="100%" height="450" style="border:0;" allowfullscreen=""
                                                loading="lazy">
                                            </iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal para Actualizar datos del Delivery -->
                            <div class="modal fade" id="modalActualizarDelivery" tabindex="-1" role="dialog"
                                aria-labelledby="modalActualizarDeliveryLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content p-2">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalActualizarDeliveryLabel">Actualizar
                                                Delivery</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form id="formActualizarDelivery">
                                                <!-- ID (oculto) -->
                                                <input type="hidden" id="ActualizarDeliveryId">

                                                <!-- Primera fila: Nombre y Apellido -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="nombreDeliveryActualizar">Nombre</label>
                                                        <input type="text" class="form-control"
                                                            id="nombreDeliveryActualizar"
                                                            name="nombreDeliveryActualizar"
                                                            placeholder="Nombre del Delivery">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="apellidoDeliveryActualizar">Apellido</label>
                                                        <input type="text" class="form-control"
                                                            id="apellidoDeliveryActualizar"
                                                            name="apellidoDeliveryActualizar"
                                                            placeholder="Apellido del Delivery">
                                                    </div>
                                                </div>

                                                <!-- Segunda fila: CI y Email -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="ciDeliveryActualizar">C.I.</label>
                                                        <input type="text" class="form-control"
                                                            id="ciDeliveryActualizar" name="ciDeliveryActualizar"
                                                            placeholder="Carnet de Identidad">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="emailDeliveryActualizar">Email</label>
                                                        <input type="email" class="form-control"
                                                            id="emailDeliveryActualizar" name="emailDeliveryActualizar"
                                                            placeholder="Correo Electrónico">
                                                    </div>
                                                </div>

                                                <!-- Tercera fila: Número de Contacto y Tipo de Vehículo -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="tipoVehiculoActualizar">Tipo de Vehículo</label>
                                                        <input type="text" class="form-control"
                                                            id="tipoVehiculoActualizar" name="tipoVehiculoActualizar"
                                                            placeholder="Tipo de Vehículo">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="matriculaVehiculoActualizar">Matrícula del
                                                            Vehículo</label>
                                                        <input type="text" class="form-control"
                                                            id="matriculaVehiculoActualizar"
                                                            name="matriculaVehiculoActualizar"
                                                            placeholder="Matrícula del Vehículo">
                                                    </div>
                                                </div>

                                                <!-- Cuarta fila: Matrícula del Vehículo y Sexo -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="numeroContactoDeliveryActualizar">Número de
                                                            Contacto</label>
                                                        <input type="text" class="form-control"
                                                            id="numeroContactoDeliveryActualizar"
                                                            name="numeroContactoDeliveryActualizar"
                                                            placeholder="Número de Teléfono">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="sexoDeliveryActualizar">Sexo</label>
                                                        <select class="form-control" id="sexoDeliveryActualizar"
                                                            name="sexoDeliveryActualizar">
                                                            <option value="M">Masculino</option>
                                                            <option value="F">Femenino</option>
                                                        </select>
                                                    </div>
                                                </div>

                                                <!-- Quinta fila: Estado (Select) -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="estadoDeliveryActualizar">Estado</label>
                                                        <select class="form-control" id="estadoDeliveryActualizar"
                                                            name="estadoDeliveryActualizar">
                                                            <option value="activo">Activo</option>
                                                            <option value="inactivo">Inactivo</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cerrar</button>
                                            <button type="submit" form="formActualizarDelivery" class="btn btn-primary"
                                                id="btnActualizarDelivery">Actualizar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </main>
                        <!-- fin de contenido -->


                </div>
                <!-- End of Main Content -->

                <%- include('partials/footer') %>

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('partials/logout') %>

        <!-- sweetalert2 -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!-- Bootstrap core JavaScript-->
        <script src="/dashboard/vendor/jquery/jquery.min.js"></script>
        <script src="/dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/dashboard/js/sb-admin-2.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/dashboard/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- datatables -->
        <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
        <script src="https://cdn.datatables.net/2.1.8/js/dataTables.bootstrap5.js"></script>
        <script src="https://cdn.datatables.net/responsive/3.0.3/js/dataTables.responsive.js"></script>
        <script src="https://cdn.datatables.net/responsive/3.0.3/js/responsive.bootstrap5.js"></script>

        <!-- mi js -->
        <Script src="/dashboard/jsAdminDelivery/cargarFotoPerfil.js"></Script>
        <Script src="/dashboard/jsAdminDelivery/modalMapa.js"></Script>
        <Script src="/dashboard/jsAdminDelivery/crudAdminDelivery.js"></Script>

</body>

</html>