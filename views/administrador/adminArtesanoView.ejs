<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Administrar Artesano</title>

    <!-- datatables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.8/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.3/css/responsive.bootstrap5.css">



    <!-- Custom fonts for this template-->
    <link href="/dashboard/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- iconos -->
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />


    <!-- Custom styles for this template-->
    <link href="/dashboard/css/sb-admin-2.min.css" rel="stylesheet">


    <!-- miCss -->


</head>


<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- sidebar -->
        <%- include('partials/sidebar') %>
            <!-- fin sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- topbar -->
                    <%- include('partials/topbar') %>
                        <!-- fin de topbar -->

                        <!-- contenido main -->
                        <main class="mx-5 my-5 contenido-principal">

                            <!-- Card Contenedor -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h4 class="m-0 font-weight-bold text-secondary text-center">Gestión de Artesanos
                                    </h4>
                                </div>
                                <div class="card-body">
                                    <!-- Botón para abrir el modal -->
                                    <button class="btn btn-success my-1 mt-4 ml-4" data-toggle="modal"
                                        data-target="#modalAgregarArtesano">Añadir Artesano</button>

                                    <div class="row contenedor-tabla">
                                        <div class="col-lg-12">
                                            <div class="table-responsive table-responsive px-4 py-2">
                                                <table id="tablaArtesano" class="table  table-hover responsive nowrap"
                                                    style="width:100%">
                                                    <thead class="thead-light text-center">
                                                        <tr>
                                                            <th class="">#:&nbsp;</th>
                                                            <th>ID:&nbsp;</th>
                                                            <th class="">C.I.:&nbsp;</th>
                                                            <th class="">Nombres:&nbsp;</th>
                                                            <th class="">Apellidos:&nbsp;</th>
                                                            <th class="">Email:&nbsp;</th>
                                                            <th class="">Celular:&nbsp;</th>
                                                            <th class="">Especialidad:&nbsp;</th>
                                                            <th class="">Comunidad:&nbsp;</th>
                                                            <th class="">Sexo:&nbsp;</th>
                                                            <th class="">Imagen:&nbsp;</th>
                                                            <th class="">Estado:&nbsp;</th>
                                                            <th class="">Acciones:&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- Contenido de la tabla -->
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal para Añadir Artesano con estilo de perfil -->
                            <div class="modal fade" id="modalAgregarArtesano" tabindex="-1" role="dialog"
                                aria-labelledby="modalAgregarArtesanoLabel" aria-hidden="true">
                                <div class="modal-dialog modal-xl modal-dialog-centered" role="document">
                                    <div class="modal-content rounded bg-white perfil-cliente">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalAgregarArtesanoLabel">Añadir Artesano</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div
                                                        class="d-flex flex-column align-items-center text-center py-5 imagenPerfilArtesano">
                                                        <!-- Imagen del perfil del cliente con tamaño fijo -->
                                                        <img id="imagenPerfilArtesano" class="rounded-circle"
                                                            width="150px" height="150px" style="object-fit: cover;"
                                                            src="/moduloDifusion/img/perfil.jpg">
                                                        <span class="p-2 m-2 bg-success badge">ARTESANO</span>
                                                    </div>
                                                </div>
                                                <div class="col-md-9 px-4">
                                                    <form id="formRegistrarArtesano" method="POST" action=""
                                                        enctype="multipart/form-data">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <label for="nombreArtesano"
                                                                    class="labels">Nombres</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-user"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="nombreArtesano" name="nombreArtesano"
                                                                        placeholder="Ingresa los nombres" required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="fotoArtesano" class="labels">Imagen de
                                                                    Perfil</label>
                                                                <div class="input-group">
                                                                    <input type="file" class="form-control"
                                                                        id="fotoArtesano" name="fotoArtesano"
                                                                        accept="image/*" required>
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-upload"></i></span>
                                                                </div>
                                                                <img id="previewImagenArtesano" src=""
                                                                    alt="Vista previa"
                                                                    style="display: none; max-width: 100%; margin-top: 10px;">
                                                            </div>

                                                        </div>
                                                        <div class="row mt-2">
                                                            <div class="col-md-6">
                                                                <label for="apellidoArtesano"
                                                                    class="labels">Apellidos</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-user-tag"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="apellidoArtesano" name="apellidoArtesano"
                                                                        placeholder="ingresa los apellidos" required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="ciArtesano" class="labels">C.I.</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-id-card"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="ciArtesano" name="ciArtesano"
                                                                        placeholder="Ingresa el C.I." required>
                                                                </div>
                                                            </div>

                                                        </div>
                                                        <div class="row mt-2">
                                                            <div class="col-md-6">
                                                                <label for="emailArtesano" class="labels">Email</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-envelope"></i></span>
                                                                    <input type="email" class="form-control"
                                                                        id="emailArtesano" name="emailArtesano"
                                                                        placeholder="Ingresa el email" required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="celularArtesano" class="labels">Numero de
                                                                    Contacto</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-phone"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="celularArtesano" name="celularArtesano"
                                                                        placeholder="Ingrese el numero de contacto"
                                                                        required>
                                                                </div>
                                                            </div>


                                                        </div>
                                                        <div class="row mt-2">


                                                            <div class="col-md-6">
                                                                <label for="especialidadArtesano"
                                                                    class="labels">Especialidad</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-briefcase"></i></span>
                                                                    <input type="text" class="form-control"
                                                                        id="especialidadArtesano"
                                                                        name="especialidadArtesano"
                                                                        placeholder="Especialidad del Artesano"
                                                                        required>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <label for="sexoArtesano" class="labels">Sexo</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-venus-mars"></i></span>
                                                                    <select class="form-select" id="sexoArtesano"
                                                                        name="sexoArtesano" required>
                                                                        <option value="" disabled selected>Selecciona tu
                                                                            sexo</option>
                                                                        <option value="M">Masculino</option>
                                                                        <option value="F">Femenino</option>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                        </div>

                                                        <div class="row mt-2">
                                                            <div class="col-md-6">
                                                                <label for="comunidadArtesano"
                                                                    class="labels">Comunidad</label>
                                                                <div class="input-group">
                                                                    <span class="input-group-text"><i
                                                                            class="fa fa-home"></i></span>
                                                                    <select class="form-control" id="comunidadArtesano"
                                                                        name="comunidadArtesano" required>
                                                                        <option value="" disabled selected>Seleccionar
                                                                            Comunidad</option>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6">
                                                                <label for="ubicacionArtesano"
                                                                    class="labels">Ubicación</label>
                                                                <div class="input-group">
                                                                    <button type="button"
                                                                        class="btn btn-outline-primary" id="abrirMapa">
                                                                        <i class="fa fa-map"></i> Abrir Google Maps
                                                                    </button>
                                                                </div>
                                                            </div>


                                                        </div>

                                                        <div class="mt-4 text-center">
                                                            <button type="submit" class="btn btn-success"
                                                                id="btnRegistrarArtesano"
                                                                name="btnRegistrarArtesano">Guardar Artesano</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cerrar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Segundo Modal con Google Maps -->
                            <div class="modal fade" id="segundoModal" tabindex="-1" role="dialog"
                                aria-labelledby="segundoModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-lg" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="segundoModalLabel">Ubicación en Google Maps</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <!-- Reemplaza la URL del mapa con la ubicación deseada -->
                                            <iframe
                                                src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d108149.74007316536!2d-68.17363229776905!3d-16.500849290268757!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ses!2sbo!4v1729041934336!5m2!1ses!2sbo"
                                                width="100%" height="450" style="border:0;" allowfullscreen=""
                                                loading="lazy">
                                            </iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal para Actualizar datos del Artesano -->
                            <div class="modal fade" id="modalActualizarArtesano" tabindex="-1" role="dialog"
                                aria-labelledby="modalActualizarArtesanoLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content p-2">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="modalActualizarArtesanoLabel">Actualizar
                                                Artesano</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form id="formActualizarArtesano">
                                                <!-- ID (oculto) -->
                                                <input type="hidden" id="ActualizarArtesanoId">

                                                <!-- Primera fila: Nombre y Apellido -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="nombreArtesanoActualizar">Nombre</label>
                                                        <input type="text" class="form-control"
                                                            id="nombreArtesanoActualizar"
                                                            name="nombreArtesanoActualizar"
                                                            placeholder="Nombre del Artesano">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="apellidoArtesanoActualizar">Apellido</label>
                                                        <input type="text" class="form-control"
                                                            id="apellidoArtesanoActualizar"
                                                            name="apellidoArtesanoActualizar"
                                                            placeholder="Apellido del Artesano">
                                                    </div>
                                                </div>

                                                <!-- Segunda fila: CI y Email -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="ciArtesanoActualizar">C.I.</label>
                                                        <input type="text" class="form-control"
                                                            id="ciArtesanoActualizar" name="ciArtesanoActualizar"
                                                            placeholder="Carnet de Identidad">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="emailArtesanoActualizar">Email</label>
                                                        <input type="email" class="form-control"
                                                            id="emailArtesanoActualizar" name="emailArtesanoActualizar"
                                                            placeholder="Correo Electrónico">
                                                    </div>
                                                </div>

                                                <!-- Tercera fila: Número de Contacto y Especialidad -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="numeroContactoArtesanoActualizar">Número de
                                                            Contacto</label>
                                                        <input type="text" class="form-control"
                                                            id="numeroContactoArtesanoActualizar"
                                                            name="numeroContactoArtesanoActualizar"
                                                            placeholder="Número de Teléfono">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="sexoArtesanoActualizar">Sexo</label>
                                                        <select class="form-control" id="sexoArtesanoActualizar"
                                                            name="sexoArtesanoActualizar">
                                                            <option value="M">Masculino</option>
                                                            <option value="F">Femenino</option>
                                                        </select>
                                                    </div>

                                                </div>

                                                <!-- Cuarta fila: Sexo (Select) y Comunidad (Select) -->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="especialidadArtesanoActualizar">Especialidad</label>
                                                        <input type="text" class="form-control"
                                                            id="especialidadArtesanoActualizar"
                                                            name="especialidadArtesanoActualizar"
                                                            placeholder="Especialidad del Artesano">
                                                    </div>
                                                    <div class="form-group col-md-6">
                                                        <label for="comunidadArtesanoActualizar">Comunidad</label>
                                                        <select class="form-control" id="comunidadArtesanoActualizar"
                                                            name="comunidadArtesanoActualizar">
                                                            <!-- Las opciones serán cargadas dinámicamente -->
                                                        </select>
                                                    </div>
                                                </div>
                                                <!-- quinta fila: estado(select)-->
                                                <div class="form-row">
                                                    <div class="form-group col-md-6">
                                                        <label for="estadoArtesanoActualizar">Estado</label>
                                                        <select class="form-control" id="estadoArtesanoActualizar"
                                                            name="estadoArtesanoActualizar">
                                                            <option value="activo">Activo</option>
                                                            <option value="inactivo">Inactivo</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cerrar</button>
                                            <button type="submit" form="formActualizarArtesano" class="btn btn-primary"
                                                id="btnActualizarArtesano">Actualizar</button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </main>
                        <!-- fin de contenido -->


                </div>
                <!-- End of Main Content -->

                <%- include('partials/footer') %>

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('partials/logout') %>

        <!-- sweetalert2 -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!-- Bootstrap core JavaScript-->
        <script src="/dashboard/vendor/jquery/jquery.min.js"></script>
        <script src="/dashboard/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/dashboard/js/sb-admin-2.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/dashboard/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- datatables -->
        <script src="https://cdn.datatables.net/2.1.8/js/dataTables.js"></script>
        <script src="https://cdn.datatables.net/2.1.8/js/dataTables.bootstrap5.js"></script>
        <script src="https://cdn.datatables.net/responsive/3.0.3/js/dataTables.responsive.js"></script>
        <script src="https://cdn.datatables.net/responsive/3.0.3/js/responsive.bootstrap5.js"></script>

        <!-- mi js -->
        <script src="/dashboard/jsAdminArtesano/cargarFotoPerfil.js"></script>
        <script src="/dashboard/jsAdminArtesano/modalMapa.js"></script>
        <script src="/dashboard/jsAdminArtesano/crudAdminArtesano.js"></script>


</body>

</html>