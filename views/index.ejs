        <a href="ingreso_registro" class="login">Ingresar/Registrarse <i class="fas fa-user"></i></a>
      </div>
    </nav>

    <!-- banner -->
    <div class="banner">
      <div class="container">
        <h1>Lleva a Bolivia donde estés</h1>
        <p>#Tienda en línea</p>
        <a href="#productos" class="scroll-link btn btn-white">Ver Productos</a>
      </div>
    </div>
