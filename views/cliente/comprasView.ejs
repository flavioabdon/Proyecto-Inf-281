    <!-- hero -->
    <section class="page-hero">
        <div class="section-center">
            <h3 class="page-hero-title">Compras Cliente</h3>
        </div>
    </section>

    <section class="container py-5">

        <!-- Card Contenedor -->
        <div class="card shadow mb-4">
            <!-- <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-secondary text-center">Compras
                </h4>
            </div> -->
            <div class="card-body">

                <div class="row contenedor-tabla">
                    <div class="col-lg-12">
                        <div class="table-responsive table-responsive px-4 py-2">
                            <table id="tablaCompras" class="table  table-hover responsive nowrap" style="width:100%">
